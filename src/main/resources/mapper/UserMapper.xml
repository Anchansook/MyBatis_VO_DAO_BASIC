<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC
	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.learning.cookiestore.mapper.UserMapper">
<!-- 유저 생성 -->
<insert id="save" parameterType="com.learning.cookiestore.vo.UserVO">
	INSERT INTO user <!-- 전체 테이블 컬럼 다 넣을거라 생략. 아니라면 -> (userId,...) -->
	VALUES (#{userId}, #{password}, #{name}, #{email})
</insert>

<!-- 유저 조회 -->
<select id="findUserByUserId" resultType="com.learning.cookiestore.vo.UserVO">
	SELECT
		user_id AS userId,
		name,
		email
	FROM user
	WHERE user_id = #{userId}
</select>

<!-- 유저 수정 (기본 정보) -->
<update id="updateUserInfoByUserId">
	UPDATE user
	SET
		user_id = #{userId},
		name = #{name},
		email = #{email}
	WHERE user_id = #{userId}
</update>

<!-- 유저 수정 (비밀번호) -->
<update id="updateUserPasswordByUserId">
	UPDATE user
	SET
		password = #{password}
	WHERE user_id = #{userId}
</update>

<!-- 유저 삭제 -->
<delete id="deleteUserByUserId">
	DELETE
	FROM user
	WHERE user_id = #{userId}
</delete>

</mapper>